# CryptoQuantBot 环境配置示例文件
# 复制此文件为 .env 并根据需要修改配置

# ======================
# 应用基础配置
# ======================
NODE_ENV=development
APP_NAME=CryptoQuantBot
APP_VERSION=1.0.0

# ======================
# 服务端口配置
# ======================
BACKEND_PORT=8000
FRONTEND_PORT=3000
REDIS_PORT=6379

# ======================
# 币安API配置
# ======================
# API模式: PUBLIC_MODE (公开数据模式) | FULL_MODE (完整功能模式)
BINANCE_API_MODE=PUBLIC_MODE

# 币安API密钥 (仅在FULL_MODE模式下需要)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# 是否使用测试网 (true: 测试网, false: 主网)
BINANCE_TESTNET=true

# 币安API基地址 (通常不需要修改)
BINANCE_BASE_URL=https://api.binance.com
BINANCE_TESTNET_URL=https://testnet.binance.vision

# ======================
# 交易对配置
# ======================
# 支持的交易对 (逗号分隔)
BINANCE_SYMBOLS=BTCUSDT,ETHUSDT

# 默认分析时间周期
BINANCE_DEFAULT_INTERVAL=4h

# 历史数据获取限制
BINANCE_KLINE_LIMIT=1000

# ======================
# 技术指标参数
# ======================
# MACD参数
MACD_FAST_PERIOD=12
MACD_SLOW_PERIOD=26
MACD_SIGNAL_PERIOD=9

# RSI参数
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# 布林带参数
BB_PERIOD=20
BB_STD_DEV=2.0

# ======================
# 交易配置
# ======================
# 是否启用自动交易
AUTO_TRADING_ENABLED=false

# 最大仓位大小 (USDT)
MAX_POSITION_SIZE=1000

# 风险管理
RISK_MANAGEMENT_ENABLED=true
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=5.0

# ======================
# 数据库配置
# ======================
DATABASE_URL=sqlite:///./data/crypto_trading.db
DATABASE_ECHO=false

# ======================
# Redis配置
# ======================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ======================
# 日志配置
# ======================
LOG_LEVEL=INFO
LOG_FILE=./data/logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ======================
# WebSocket配置
# ======================
WS_HEARTBEAT_INTERVAL=30
WS_RECONNECT_INTERVAL=5
WS_MAX_RECONNECT_ATTEMPTS=10

# ======================
# 安全配置
# ======================
# JWT密钥 (用于API认证，如果需要)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ======================
# 性能配置
# ======================
# API请求频率限制 (请求/分钟)
API_RATE_LIMIT=1200

# 数据缓存时间 (秒)
CACHE_TTL=60

# 数据库连接池大小
DB_POOL_SIZE=20

# ======================
# 通知配置
# ======================
# 是否启用通知
NOTIFICATIONS_ENABLED=true

# 邮件通知配置 (可选)
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=

# ======================
# 开发调试配置
# ======================
# 是否启用调试模式
DEBUG=false

# 是否启用SQL查询日志
SQL_DEBUG=false

# 是否启用API性能监控
API_MONITORING=true

# 是否保存原始数据 (用于调试)
SAVE_RAW_DATA=false
